<%- include('../common/header') %>
<%- include('../common/menu') %>


<main class="mb-4">

    <div class="bg-light p-5 mb-4">
        <div class="container">
            <h1>Nova Notícia</h1>
        </div>
    </div>

    <div class="container">
        <form action="admin/salvar-noticia" method="post">
            <div class="mb-3">
                <label for="titulo" class="form-label">Título</label>
                <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Título da Notícia" autocomplete="off" required>
            </div>

            <div class="mb-3">
                <label for="conteudo" class="form-label">Conteúdo</label>
                <textarea name="conteudo" id="conteudo" class="form-control" rows="5" cols="30" style="resize: none;"></textarea>
            </div>

            <input type="submit" value="Criar" class="btn btn-primary btn-lg w-100">

        </form>
    </div>

   

</main>

<%- include('../common/footer') %>